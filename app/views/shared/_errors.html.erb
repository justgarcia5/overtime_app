<% if obj.errors.any? %>
  <div class="container m-4">
    <div class="row">
      <div class="col-md-12">
        <div class="alert alert-danger">
            <h2><%= pluralize(obj.errors.count, "error") %>
            prohibited your <%= obj.class.name %> from being created</h2>
            <ul>
              <% obj.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>
