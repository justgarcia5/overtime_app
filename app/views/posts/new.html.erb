<h1 class="mt-3">New Post</h1>

<%= form_for @post do |f| %>
  <div class="custom-form form-group">

    <%= f.label :date %><br>
    <%= f.date_field :date, class: 'date-field form-control' %><br>

    <%= f.label :rationale %><br>
    <%= f.text_area :rationale, class: 'form-control' %><br>

    <%= f.submit "Submit", class: 'btn btn-primary' %>

  </div>
<% end %>
