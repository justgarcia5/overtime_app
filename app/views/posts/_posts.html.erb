<% @posts.each do |post| %>
  <tr>
    <td>
      <%= post.id %>
    </td>
    <td>
      <%= post.date %>
    </td>
    <td>
      <%= post.user.full_name %>
    </td>
    <td>
      <%= truncate(post.rationale) %>
    </td>
    <td>
      <%= link_to 'Edit', edit_post_path(post.id), id: 'edit', class: 'btn-sm btn-secondary text-decoration-none' %>
    </td>
  </tr>
<% end %>
