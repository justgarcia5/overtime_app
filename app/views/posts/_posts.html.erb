<% @posts.each do |post| %>
  <tr>
    <td>
      <%= post.id %>
    </td>
    <td>
      <%= post.date %>
    </td>
    <td>
      <%= post.user.full_name %>
    </td>
    <td>
      <%= truncate(post.rationale) %>
    </td>
    <td>
      <%= link_to 'Edit', edit_post_path(post.id), id: 'edit', class: 'btn-sm btn-secondary text-decoration-none' %>
    </td>
    <td>
      <%= link_to post_path(post), method: :delete, data: { confirm: "Are you sure you would like to delete #{post.user.full_name}" }, :class => "no-link"  do %>
        <%= image_tag "icon-delete.svg" %>
      <% end %>
    </td>
  </tr>
<% end %>
